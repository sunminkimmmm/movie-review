<% for(var i = 0; i < data.length; i++){ %>


    <div class="card" style=" display: inline-block; margin-top: 3%; margin-left: 3%; margin-bottom: 2%;width: 300px;">
            <img style="height:400px; width: 300px;" src="<%= data[i].imgUrl%>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= data[i].title %></h5>
                <p class="card-text"><%= data[i].contents %></p>
                <p class="card-text"><%= data[i].actors %></p>
                <p class="card-text"><%= data[i].date.getFullYear() %>년 <%= data[i].date.getMonth()+1 %>월 <%= data[i].date.getDate() %>일 </p> 
               <a href="/movie/movieView/<%=data[i].mCode%>" class="btn btn-outline-primary">상세보기</a>
        
               
        
            </div>
        </div>
        


<% } %>
